<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>prjectId</groupId>
    <artifactId>testId</artifactId>
    <version>1.0</version>
    <!-- Properties -->
    <properties>
        <!-- Test name -->
        <performancetest.script>mantistest.jmx</performancetest.script>
        <name.test>mantisTest</name.test>
        <dir>${name.test}-${maven.build.timestamp}</dir>
        <appurl>ubuntuserv</appurl>
        <throughput>2.0</throughput>
    </properties>
    <profiles>
        <profile>
            <id>capacity</id>
            <properties>
                <threads>40</threads>
                <startuptime>1800</startuptime>
                <holdload>60</holdload>
            </properties>
        </profile>
        <profile>
            <id>performance</id>
            <properties>
                <threads>14</threads>
                <startuptime>180</startuptime>
                <holdload>3600</holdload>
            </properties>
        </profile>
    </profiles>
    <build>
        <plugins>
            <plugin>
                <groupId>com.lazerycode.jmeter</groupId>
                <artifactId>jmeter-maven-plugin</artifactId>
                <version>2.9.0</version>
                <executions>
                    <execution>
                        <id>jmeter-tests</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>jmeter</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <testFilesIncluded>
                        <jMeterTestFile>test/${performancetest.script}</jMeterTestFile>
                    </testFilesIncluded>
                    <jmeterVersion>5.1.1</jmeterVersion>
                    <jMeterProcessJVMSettings>
                        <xms>2048</xms>
                        <xmx>2048</xmx>
                        <arguments>
                            <argument>-XX:MaxMetaspaceSize=256m</argument>
                            <argument>-XX:+UseG1GC</argument>
                            <argument>-XX:MaxGCPauseMillis=100</argument>
                            <argument>-XX:G1ReservePercent=20</argument>
                            <argument>-Duser.language=en</argument>
                            <argument>-Duser.region=EN</argument>
                            <argument>-Dfile.encoding=UTF-8</argument>
                            <argument>-XX:-HeapDumpOnOutOfMemoryError</argument>
                            <argument>-server</argument>
                        </arguments>
                    </jMeterProcessJVMSettings>
                    <guiTestFile>${project.basedir}/src/test/jmeter/test/${performancetest.script}</guiTestFile>
                    <jmeterExtensions>
                        <artifact>kg.apc:jmeter-plugins-perfmon:2.1</artifact>
                        <artifact>kg.apc:jmeter-plugins-extras:1.4.0</artifact>
                    </jmeterExtensions>
                    <downloadExtensionDependencies>true</downloadExtensionDependencies>
                    <resultsDirectory>${project.build.directory}/jmeter/results/</resultsDirectory>
                    <reportDirectory>${project.build.directory}/jmeter/reports/</reportDirectory>
                    <generateReports>true</generateReports>
                    <propertiesUser>
                        <appurl>${appurl}</appurl>
                        <threads>${threads}</threads>
                        <startuptime>${startuptime}</startuptime>
                        <holdload>${holdload}</holdload>
                        <throughput>${throughput}</throughput>
                    </propertiesUser>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
